/* init */
function init(){
  mainArea.style.display = 'none';
  menuBar.style.display = 'flex';
  creditsPanel.style.display = 'none';
  scoreEl.textContent = '0';
  // ensure word text color matches theme (CSS handles it) ‚Äî but force reflow on load
  document.querySelectorAll('.word').forEach(w=>w.style.color = window.getComputedStyle(w).color);
}
init();

/* expose quick functions if needed */
window.MATCH = { startGame, backToMenu };

</script>
