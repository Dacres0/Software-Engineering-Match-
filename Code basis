<script>
const menu=document.getElementById("menu"),rules=document.getElementById("rules"),ruleText=document.getElementById("ruleText"),accept=document.getElementById("accept"),decline=document.getElementById("decline"),game=document.getElementById("game"),grid=document.getElementById("grid"),wordList=document.getElementById("wordList"),scoreEl=document.getElementById("score"),livesBox=document.getElementById("livesBox"),livesEl=document.getElementById("lives"),feedback=document.getElementById("feedback"),modeNow=document.getElementById("modeNow"),quit=document.getElementById("quit"),creditsBtn=document.getElementById("creditsBtn"),credits=document.getElementById("credits"),restart=document.getElementById("restart"),end=document.getElementById("end"),endMsg=document.getElementById("endMsg"),again=document.getElementById("again"),exit=document.getElementById("exit");
let mode=null,score=0,lives=3,target=5,current=null;
const childData=[{img:"ðŸ¶",word:"Dog"},{img:"ðŸŽ",word:"Apple"},{img:"ðŸš—",word:"Car"},{img:"ðŸ¼",word:"Panda"},{img:"ðŸŒ",word:"Banana"},{img:"âœˆï¸",word:"Plane"},{img:"âš½",word:"Ball"},{img:"ðŸ“",word:"Strawberry"}];
const adultData={categories:["Fruits","Animals","Vehicles","Sports"],words:[{word:"Car",category:"Vehicles"},{word:"Banana",category:"Fruits"},{word:"Dog",category:"Animals"},{word:"Tennis",category:"Sports"},{word:"Apple",category:"Fruits"},{word:"Cat",category:"Animals"},{word:"Bicycle",category:"Vehicles"},{word:"Football",category:"Sports"},{word:"Kiwi",category:"Fruits"},{word:"Horse",category:"Animals"}]};
function shuffle(a){return a.slice().sort(()=>Math.random()-.5)}
function rand(a,n){return shuffle(a).slice(0,n)}
function openRules(m){mode=m;ruleText.innerHTML=m==="child"?`<p>Match the word to the picture. Get ${target} right to win.</p>`:`<p>Match words to categories. You have 3 lives. Get ${target} right to win.</p>`;rules.style.display="flex"}
menu.addEventListener("click",e=>{const b=e.target.closest("button[data-mode]");if(b)openRules(b.dataset.mode)});
creditsBtn.addEventListener("click",()=>{credits.style.display=credits.style.display==="none"?"block":"none"});
decline.addEventListener("click",()=>{rules.style.display="none";alert("Thanks for playing!")});
accept.addEventListener("click",()=>{rules.style.display="none";start()});
function start(){score=0;lives=3;scoreEl.textContent=score;livesEl.textContent=lives;feedback.textContent="";modeNow.textContent=mode.toUpperCase();menu.style.display="none";game.style.display="block";livesBox.style.display=mode==="adult"?"block":"none";round()}
restart.addEventListener("click",()=>{if(mode&&confirm("Restart?"))start()});
exit.addEventListener("click",()=>location.reload());
again.addEventListener("click",()=>{end.style.display="none";menu.style.display="block";game.style.display="none";mode=null});
quit.addEventListener("keydown",e=>{if(e.key==="Enter"){if(quit.value.trim().toLowerCase()==="quit")location.reload();else{alert("Type QUIT and press Enter");quit.value=""}}});
function round(){grid.innerHTML="";wordList.innerHTML="";feedback.className="feedback";if(mode==="child"){const c=rand(childData,target);current=c.map((x,i)=>({id:i,img:x.img,word:x.word}));childMode(c)}else{const w=rand(adultData.words,target);current=w.map((x,i)=>({id:i,word:x.word,cat:x.category}));adultMode(current,adultData.categories)}}
function childMode(list){list=shuffle(list);list.forEach(it=>{const t=document.createElement("div");t.className="image-tile";t.dataset.id=it.word;t.innerHTML=`<div style="font-size:44px">${it.img}</div><div class="label">drop word here</div>`;dropHandler(t,w=>{if(w===it.word){correct();t.innerHTML=`<div style="font-size:38px">${it.img}</div><div class="label">${it.word}</div>`;t.style.borderColor="#d9ffd9";t.dataset.matched="true"}else wrong()});grid.appendChild(t)});shuffle(list.map(x=>x.word)).forEach(w=>wordList.appendChild(draggable(w)))}
function adultMode(words,cats){cats.slice(0,4).forEach(c=>{const box=document.createElement("div");box.className="category-tile";box.dataset.cat=c;box.innerHTML=`<div class="category-title">${c}</div><div class="small">Drop words here</div>`;dropHandler(box,w=>{const f=current.find(x=>x.word===w);if(f&&f.cat===c){correct();const pill=document.createElement("div");pill.textContent=w;pill.style.cssText="padding:6px 8px;margin-top:6px;background:#f3fff3;border-radius:8px;font-weight:700";box.appendChild(pill)}else wrong()});grid.appendChild(box)});shuffle(words.map(x=>x.word)).forEach(w=>wordList.appendChild(draggable(w)))}
function draggable(text){const el=document.createElement("div");el.className="word";el.draggable=true;el.textContent=text;el.dataset.word=text;el.addEventListener("dragstart",e=>{e.dataTransfer.setData("text/plain",text);el.classList.add("dragging")});el.addEventListener("dragend",()=>el.classList.remove("dragging"));return el}
function dropHandler(el,cb){el.addEventListener("dragover",e=>{e.preventDefault();el.classList.add("drop-over")});el.addEventListener("dragleave",()=>el.classList.remove("drop-over"));el.addEventListener("drop",e=>{e.preventDefault();el.classList.remove("drop-over");const w=e.dataTransfer.getData("text/plain");if(!w||el.dataset.matched==="true")return;cb(w)})}
function correct(){score++;scoreEl.textContent=score;feedback.textContent="Correct!";feedback.className="feedback good";checkWin()}
function wrong(){feedback.textContent="Wrong!";feedback.className="feedback bad";if(mode==="adult"){lives--;livesEl.textContent=lives;if(lives<=0)endGame(false)}}
function checkWin(){if(score>=target)endGame(true);else{const matched=[...document.querySelectorAll('[data-matched="true"] .label')].map(l=>l.textContent);document.querySelectorAll(".word").forEach(w=>{if(matched.includes(w.textContent))w.remove()})}}
function endGame(win){end.style.display="flex";endMsg.innerHTML=win?`ðŸŽ‰ You won! Score: ${score}/${target}`:`Game Over! Score: ${score}/${target}`}
document.addEventListener("keydown",e=>{if(e.key==="Escape"&&confirm("Exit to menu?"))location.reload()});
</script>
</body>
</html>
