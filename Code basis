<script>
/* MATCH ‚Äî Final Project JS
   - theme toggle with persistence
   - emoji child tiles
   - child/adult flows, hints, timer, lives
   - words color: black in light mode, white in dark mode
*/
#https://developer.mozilla.org
/* Elements */
const menuBar = document.getElementById('menuBar');
const mainArea = document.getElementById('mainArea');
const arena = document.getElementById('arena');
const wordsList = document.getElementById('wordsList');
const scoreEl = document.getElementById('score');
const livesChip = document.getElementById('livesChip');
const livesEl = document.getElementById('lives');
const timerChip = document.getElementById('timerChip');
const timerEl = document.getElementById('timer');
const feedback = document.getElementById('feedback');
const progressBar = document.getElementById('progressBar');
const currentModeEl = document.getElementById('currentMode');
const quitInput = document.getElementById('quitInput');
const restartBtn = document.getElementById('restartBtn');
const quitBtnTop = document.getElementById('quitBtnTop');
const creditsBtn = document.getElementById('creditsBtn');
const creditsPanel = document.getElementById('creditsPanel');

const rulesModal = document.getElementById('rulesModal');
const rulesText = document.getElementById('rulesText');
const acceptRules = document.getElementById('acceptRules');
const declineRules = document.getElementById('declineRules');

const endModal = document.getElementById('endModal');
const endMessage = document.getElementById('endMessage');
const playAgain = document.getElementById('playAgain');
const exitBtn = document.getElementById('exitBtn');

const themeToggle = document.getElementById('themeToggle');
const themeEmoji = document.getElementById('themeEmoji');
const themeText = document.getElementById('themeText');

/* State */
let mode = null;
let score = 0;
let lives = 3;
const targetPairs = 5;
let roundData = null;
let adultTimer = null;
let adultTimeLeft = 0;
let hintAttempts = {};

/* Emoji pool */
const childPool = [
  { emoji: 'üê∂', word: 'Dog' },
  { emoji: 'üçé', word: 'Apple' },
  { emoji: 'üöó', word: 'Car' },
  { emoji: 'üêº', word: 'Panda' },
  { emoji: 'üçå', word: 'Banana' },
  { emoji: '‚úàÔ∏è', word: 'Plane' },
  { emoji: '‚öΩ', word: 'Ball' },
  { emoji: 'üçì', word: 'Strawberry' },
  { emoji: 'üê±', word: 'Cat' },
  { emoji: 'üö≤', word: 'Bike' }
];

const adultData = {
  categories: ['Animals','Fruits','Vehicles','Tools'],
  words: [
    {word:'Car',category:'Vehicles'},
    {word:'Banana',category:'Fruits'},
    {word:'Dog',category:'Animals'},
    {word:'Hammer',category:'Tools'},
    {word:'Apple',category:'Fruits'},
    {word:'Cat',category:'Animals'},
    {word:'Bicycle',category:'Vehicles'},
    {word:'Wrench',category:'Tools'},
    {word:'Kiwi',category:'Fruits'},
    {word:'Horse',category:'Animals'}
  ]
};

/* helpers */
const randSlice = (arr,n)=>arr.slice().sort(()=>0.5-Math.random()).slice(0,n);
const shuffle = (arr)=>arr.slice().sort(()=>0.5-Math.random());
const clear = el => { while(el.firstChild) el.removeChild(el.firstChild); };

/* THEME handling */
function applyTheme(name){
  document.documentElement.setAttribute('data-theme', name);
  themeEmoji.textContent = name === 'dark' ? 'üåú' : 'üåû';
  themeText.textContent = name === 'dark' ? 'Dark' : 'Light';
  // Update word color explicitly (CSS already handles .word color based on data-theme,
  // but ensure repaint by toggling a class on words if needed)
  document.querySelectorAll('.word').forEach(w => {
    // no-op here; CSS takes care. kept for future dynamic tweaks.
  });
  localStorage.setItem('match_theme', name);
}
(function initTheme(){
  const saved = localStorage.getItem('match_theme') || (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
  applyTheme(saved);
})();
themeToggle.addEventListener('click', ()=> {
  const cur = document.documentElement.getAttribute('data-theme') === 'dark' ? 'dark' : 'light';
  applyTheme(cur === 'dark' ? 'light' : 'dark');
});
themeToggle.addEventListener('keydown', e => { if(e.key === 'Enter') themeToggle.click(); });

/* MENU -> rules -> accept -> start */
menuBar.addEventListener('click', (e)=>{
  const btn = e.target.closest('button[data-mode]');
  if(!btn) return;
  mode = btn.dataset.mode;
  openRules(mode);
});
#sourced similar code from https://dev.to/jscrambler/build-a-simple-game-in-vanilla-js-with-the-drag-and-drop-api-58lf
function openRules(m){
  const text = m === 'child'
    ? `<strong>Child Mode</strong>: Drag the word to the emoji. Unlimited tries; a hint appears after 2 failed attempts on the same item. Win at ${targetPairs}/5.`
    : `<strong>Adult Mode</strong>: Drag the word into the correct category. You have <strong>3 lives</strong> and <strong>10 seconds</strong> per attempt. Win at ${targetPairs}/5.`;
  rulesText.innerHTML = text;
  rulesModal.style.display = 'flex';
  rulesModal.setAttribute('aria-hidden','false');
}
declineRules.addEventListener('click', ()=> { rulesModal.style.display='none'; rulesModal.setAttribute('aria-hidden','true'); });
acceptRules.addEventListener('click', ()=> { rulesModal.style.display='none'; rulesModal.setAttribute('aria-hidden','true'); startGame(); });

/* start, restart, quit, credits */
restartBtn.addEventListener('click', ()=> { if(!mode) return; if(confirm('Restart round?')) startGame(); });
quitBtnTop.addEventListener('click', ()=> { if(confirm('Quit to menu?')) backToMenu(); });
creditsBtn.addEventListener('click', ()=> { creditsPanel.style.display = creditsPanel.style.display === 'none' ? 'block' : 'none'; });

playAgain.addEventListener('click', ()=> { endModal.style.display='none'; endModal.setAttribute('aria-hidden','true'); resetState(); startGame(); });
exitBtn.addEventListener('click', ()=> backToMenu());

quitInput.addEventListener('keydown', (e)=> {
  if(e.key === 'Enter'){
    if(quitInput.value.trim().toLowerCase() === 'quit'){ backToMenu(); }
    else { alert('Type QUIT (case-insensitive) and press Enter to exit.'); quitInput.value=''; }
  }
});

/* keyboard quick quit */
document.addEventListener('keydown', (e)=> {
  if(e.ctrlKey && e.key.toLowerCase() === 'q'){ if(confirm('Quit to menu?')) backToMenu(); }
});

/* start game */
function startGame(){
  score = 0; lives = 3; hintAttempts = {}; roundData = null;
  scoreEl.textContent = score; livesEl.textContent = lives; feedback.textContent = '';
  progressBar.style.width = '0%';
  currentModeEl.textContent = mode.toUpperCase();
  menuBar.style.display = 'none'; mainArea.style.display = 'flex'; mainArea.setAttribute('aria-hidden','false');
  livesChip.style.display = mode === 'adult' ? 'inline-flex' : 'none';
  timerChip.style.display = mode === 'adult' ? 'inline-flex' : 'none';
  prepareRound();
}

/* back to menu */
function backToMenu(){
  clearAdultTimer();
  menuBar.style.display = 'flex'; mainArea.style.display = 'none'; resetState();
}

/* reset UI */
function resetState(){
  clear(arena); clear(wordsList); feedback.textContent = ''; scoreEl.textContent = '0';
  progressBar.style.width = '0%'; currentModeEl.textContent = '‚Äî'; livesChip.style.display = 'none'; timerChip.style.display = 'none';
  creditsPanel.style.display = 'none';
}

/* prepare round */
function prepareRound(){
  clear(arena); clear(wordsList); feedback.className = 'feedback';
  progressBar.style.width = ((score/targetPairs)*100) + '%';

  if(mode === 'child'){
    const chosen = randSlice(childPool, targetPairs);
    roundData = chosen.map((c,i)=>({id:i, emoji:c.emoji, word:c.word}));
    renderChild(roundData);
  } else {
    const chosen = shuffle(adultData.words).slice(0, targetPairs);
    roundData = chosen.map((w,i)=>({id:i, word:w.word, category:w.category}));
    renderAdult(roundData, adultData.categories);
  }
}
#https://dev.to/jscrambler/build-a-simple-game-in-vanilla-js-with-the-drag-and-drop-api-58lf?
/* render child */
function renderChild(items){
  const tiles = shuffle(items).map(it => {
    const d = document.createElement('div');
    d.className = 'tile';
    d.dataset.word = it.word;
    d.dataset.id = it.id;
    d.innerHTML = `<div style="font-size:64px">${it.emoji}</div><div class="label">drop word</div>`;
    addDrop(d, (droppedWord) => {
      if(d.classList.contains('matched')) return;
      if(droppedWord === it.word){
        markMatched(d, it.word);
        handleCorrect(it.word);
      } else {
        hintAttempts[it.word] = (hintAttempts[it.word] || 0) + 1;
        handleIncorrect();
        if(hintAttempts[it.word] >= 2) showHint(d);
      }
    });
    return d;
  });
  tiles.forEach(t => arena.appendChild(t));
  const words = shuffle(items.map(x=>x.word));
  words.forEach(w => wordsList.appendChild(createWord(w)));
}

/* render adult */
function renderAdult(wordsData, categories){
  categories.slice(0,4).forEach(cat => {
    const ct = document.createElement('div');
    ct.className = 'tile';
    ct.style.flexDirection = 'column';
    ct.innerHTML = `<div style="font-size:18px;font-weight:900">${cat}</div><div class="label">drop words</div>`;
    addDrop(ct, (droppedWord) => {
      const mapping = roundData.find(x=>x.word === droppedWord);
      if(mapping && mapping.category === cat){
        addMatchedPill(ct, droppedWord);
        handleCorrect(droppedWord);
        removeWordFromList(droppedWord);
      } else {
        handleIncorrect();
      }
    });
    arena.appendChild(ct);
  });

  const words = shuffle(wordsData.map(x=>x.word));
  words.forEach(w => wordsList.appendChild(createWord(w)));

  startAdultTimer();
}

/* draggable word creation */
function createWord(text){
  const el = document.createElement('div');
  el.className = 'word';
  el.textContent = text;
  el.draggable = true;
  el.tabIndex = 0;
  el.addEventListener('dragstart', e => { e.dataTransfer.setData('text/plain', text); el.classList.add('dragging'); });
  el.addEventListener('dragend', e => el.classList.remove('dragging'));
  el.addEventListener('keydown', e => {
    if(e.key === 'Enter'){ window._picked = text; el.classList.add('dragging'); feedback.textContent = `Picked "${text}". Click a target.`; setTimeout(()=>{ el.classList.remove('dragging'); window._picked=null; }, 3500); }
  });
  return el;
}
function removeWordFromList(word){
  const el = Array.from(document.querySelectorAll('.word')).find(n => n.textContent === word);
  if(el) el.remove();
}

/* drop handlers (drag & click) */
function addDrop(target, onDrop){
  target.addEventListener('dragover', e=>{ e.preventDefault(); target.classList.add('drop-over'); });
  target.addEventListener('dragleave', e=>{ target.classList.remove('drop-over'); });
  target.addEventListener('drop', e=>{ e.preventDefault(); target.classList.remove('drop-over'); const w = e.dataTransfer.getData('text/plain') || window._picked; if(!w) return; onDrop(w); });
  target.addEventListener('click', e=>{ const w = window._picked; if(!w) return; onDrop(w); window._picked = null; });
}

/* visuals */
function markMatched(tile, word){
  tile.classList.add('matched');
  const lbl = tile.querySelector('.label'); if(lbl) lbl.textContent = word;
  tile.animate([{transform:'scale(1)'},{transform:'scale(1.03)'},{transform:'scale(1)'}],{duration:420,easing:'ease-out'});
}
function addMatchedPill(container, text){
  const pill = document.createElement('div');
  pill.textContent = text; pill.style.marginTop='10px'; pill.style.padding='6px 8px'; pill.style.borderRadius='10px'; pill.style.fontWeight='900'; pill.style.background='rgba(34,197,94,0.08)';
  container.appendChild(pill);
}
#https://dev.to/jscrambler/build-a-simple-game-in-vanilla-js-with-the-drag-and-drop-api-58lf?
/* game events */
function handleCorrect(word){
  score++; scoreEl.textContent = score; feedback.textContent = '‚úÖ Correct! +1'; feedback.className = 'feedback good';
  updateProgress(); clearAdultTimer();
  // clean matched words from word list
  const matchedWords = Array.from(document.querySelectorAll('.tile.matched .label')).map(l=>l.textContent).filter(Boolean);
  document.querySelectorAll('.word').forEach(w => { if(matchedWords.includes(w.textContent)) w.remove(); });
  if(mode === 'adult' && score < targetPairs) setTimeout(()=> startAdultTimer(), 700);
  if(score >= targetPairs) showEnd(true);
}
function handleIncorrect(){
  feedback.textContent = "‚ùå That's incorrect."; feedback.className = 'feedback bad';
  if(mode === 'adult'){ lives--; livesEl.textContent = lives; clearAdultTimer(); if(lives <= 0) showEnd(false); else setTimeout(()=> startAdultTimer(), 700); }
}

/* hint */
function showHint(tile){
  tile.animate([{ boxShadow:'0 0 0 0 rgba(96,165,250,0.0)' },{ boxShadow:'0 0 0 16px rgba(96,165,250,0.08)' },{ boxShadow:'0 0 0 0 rgba(96,165,250,0.0)' }],{duration:900,easing:'ease-out'});
}

/* progress */
function updateProgress(){ const pct = Math.round((score/targetPairs)*100); progressBar.style.width = pct + '%'; }

/* adult timer */
function startAdultTimer(){
  clearAdultTimer(); adultTimeLeft = 10; timerEl.textContent = adultTimeLeft;
  adultTimer = setInterval(()=> {
    adultTimeLeft--; timerEl.textContent = adultTimeLeft;
    if(adultTimeLeft <= 0){ clearAdultTimer(); lives--; livesEl.textContent = lives; feedback.textContent = "‚è± Time's up! -1 life"; feedback.className = 'feedback bad'; if(lives <= 0) showEnd(false); else setTimeout(()=> startAdultTimer(), 700); }
  }, 1000);
}
function clearAdultTimer(){ if(adultTimer){ clearInterval(adultTimer); adultTimer = null; timerEl.textContent = '10'; } }

/* end modal */
function showEnd(win){ clearAdultTimer(); endMessage.textContent = win ? `üéâ You won ‚Äî ${score}/${targetPairs}` : `Game Over ‚Äî ${score}/${targetPairs}`; endModal.style.display = 'flex'; endModal.setAttribute('aria-hidden','false'); }

/* cleanup & auto-restart timer if necessary */
setInterval(()=> {
  const matchedWords = Array.from(document.querySelectorAll('.tile.matched .label')).map(l=>l.textContent).filter(Boolean);
  document.querySelectorAll('.word').forEach(w => { if(matchedWords.includes(w.textContent)) w.remove(); });
  updateProgress();
  if(mode === 'adult' && !adultTimer && score < targetPairs && document.querySelectorAll('.word').length > 0) startAdultTimer();
}, 700);
